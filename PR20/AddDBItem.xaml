<Window x:Class="PR20.AddDBItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR20"
        mc:Ignorable="d"
        Title="AddDBItem" Height="250" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="5">
            <Label Content="Название работы" Margin="1"/>
            <ComboBox x:Name="cbNameWork" SelectedItem="{Binding Path = IdWorkNavigation}"/>
            <Label Content="Название обьекта" Margin="1"/>
            <ComboBox x:Name="cbNameObject" SelectedItem="{Binding Path = IdObjectNavigation}"/>
            <Label Content="Обьем работы" Margin="1"/>
            <TextBox x:Name="cbVolumeWork" Text="{Binding Path = VolumeWork}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal">
            <Button Content="Добавить" Margin="5" Click="btAddItem_Click" Name="btAddItem"/>
            <Button Content="Выход" Margin="5" Click="btClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
