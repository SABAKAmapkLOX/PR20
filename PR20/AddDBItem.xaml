<Window x:Class="PR20.AddDBItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR20"
        mc:Ignorable="d"
        Title="AddDBItem" Height="450" Width="300" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="5">
            <Label Content="Название объекта" Margin="1"/>
            <ComboBox x:Name="cbIdObject" SelectedItem="{Binding Path=IdObject1}"/>
            <Label Content="Дата выполненной работы" Margin="1"/>
            <ComboBox x:Name="cbIdObjectNavigation" SelectedItem="{Binding Path=IdObjectNavigation}"/>
            <Label Content="Цена виды работы" Margin="1"/>
            <ComboBox x:Name="cbDirectoryPrice" SelectedItem="{Binding Path=IdWorkNavigation}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="5" Orientation="Horizontal">
            <Button Content="Добавить" Margin="5" Click="btAddItem_Click" Name="btAddItem"/>
            <Button Content="Выход" Margin="5" Click="btClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
