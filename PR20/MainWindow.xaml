<Window x:Class="PR20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR20"
        mc:Ignorable="d"
        Title="Практическая №20" Height="500" Width="800" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="Функции">
                <MenuItem Header="Добавить" Click="MenuItem_Click"/>
                <MenuItem Header="Редактировать" Click="MenuItem_Click"/>
                <MenuItem Header="Удалить" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <TabControl Grid.Row="1">
            <TabItem Header="Таблица">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="Таблица" Margin="5" Grid.Row="1">
                        <DataGrid x:Name="dataGridMain" AutoGenerateColumns="False" IsReadOnly="True" Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="*" Binding="{Binding IdWorkNavigation.NameWork}" Header="Название работы"/>
                                <DataGridTextColumn Width="*" Binding="{Binding IdObjectNavigation.NameObject}" Header="Название обьекта"/>
                                <DataGridTextColumn Width="*" Binding="{Binding VolumeWork}" Header="Обьем работы"/>
                                <DataGridTextColumn Width="*" Binding="{Binding IdWorkNavigation.Price}" Header="Цена"/>
                                <DataGridTextColumn Width="*" Binding="{Binding IdObjectNavigation.DateBeginingWork}" Header="Дата начала работ"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Header="SQL Запросы">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <GroupBox Header="SQL Запрос" Grid.Row="0" Margin="5">
                        <StackPanel>
                            <DataGrid x:Name="dataGridSQL" IsReadOnly="True" Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Margin="5" Header="SQL Запросы">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                            <Button Content="Количество объектов в одном городе" Margin="5" Click="Button_Click"/>
                            <Button Content="Итоговой стоимости всех работ одного вида" Margin="5" Click="Button_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="2" Margin="5">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="5">
                            <Button Margin="5" Click="Button_Click" Name="btSQL1" Content="Просмотр сведений обо всех объектах, на которых предусмотрено выполнение работ одного вида"/>
                            <Button Margin="5" Click="Button_Click" Name="btSQL2" Content="Добавление записей в таблицу Справочник окончания работ"/>
                            <Button Margin="5" Click="Button_Click" Name="btSQL3" Content="Подсчета количества месяцев строительства"/>
                            <Button Margin="5" Click="Button_Click" Name="btSQL4" Content="Вывести список работ, срок окончания которых предусмотрен в 3 квартале этого года"/>
                            <Button Margin="5" Click="Button_Click" Name="btSQL5" Content="вывести Наименование работ с максимальной расценкой"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
